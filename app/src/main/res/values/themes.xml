<resources >
    <!-- Base application theme. -->
    <style name="Theme.SuperHeroes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titulo_texto">
        <item name="android:textSize">33sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:background">@color/gray_800</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="subtitulo_texto">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:background">@color/gray_200</item>

        <item name="android:textAlignment">center</item>
        <item name="android:padding">1sp</item>
    </style>

    <style name="texto_references">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="descripcion_texto">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="btnLight">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/gray_400</item>
        <item name="buttonBarButtonStyle">@style/btnLight</item>
    </style>

    <style name="btnDark">
        <item name="android:background">@color/gray_600</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="buttonBarButtonStyle">@style/btnLight</item>
    </style>

    <style name="editTextStyles">
        <item name="android:textColorHint">@color/gray_1000</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>